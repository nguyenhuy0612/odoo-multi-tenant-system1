# SSL Configuration with Let's Encrypt Support
# This file contains SSL-specific configurations for Nginx
# These directives should be placed within the http block

# Note: This file is included in nginx.conf within the http block
# All directives here will be applied globally within the http context

# Let's Encrypt certificate paths (will be updated by setup-ssl.sh)
# ssl_certificate /etc/letsencrypt/live/khudroo.com/fullchain.pem;
# ssl_certificate_key /etc/letsencrypt/live/khudroo.com/privkey.pem;
# ssl_trusted_certificate /etc/letsencrypt/live/khudroo.com/chain.pem;

# Modern SSL protocols - only TLS 1.2 and 1.3
ssl_protocols TLSv1.2 TLSv1.3;

# Strong cipher suites optimized for security and performance
ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
ssl_prefer_server_ciphers off;

# SSL session optimization
ssl_session_cache shared:SSL:50m;
ssl_session_timeout 1d;
ssl_session_tickets off;

# OCSP stapling for improved SSL performance
ssl_stapling on;
ssl_stapling_verify on;

# DH parameters for perfect forward secrecy
ssl_dhparam /etc/nginx/ssl/dhparam.pem;

# DNS resolvers for OCSP stapling
resolver 8.8.8.8 8.8.4.4 1.1.1.1 1.0.0.1 valid=300s;
resolver_timeout 5s;

# Security headers (these will be applied to HTTPS server blocks)
# Note: These are commented out here because add_header should be in server blocks
# Uncomment and move to individual server blocks as needed

# Security headers for HTTPS server blocks
map $scheme $hsts_header {
    https "max-age=63072000";
    default "";
}

map $scheme $frame_options {
    https "DENY";
    default "";
}

map $scheme $content_type_options {
    https "nosniff";
    default "";
}

map $scheme $xss_protection {
    https "1; mode=block";
    default "";
}

map $scheme $referrer_policy {
    https "no-referrer-when-downgrade";
    default "";
}

# CSP policy is now defined directly in server blocks for better reliability