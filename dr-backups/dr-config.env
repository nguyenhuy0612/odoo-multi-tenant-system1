# Add these to your dr-config.env file
DR_BACKUP_DIR="/app/data"
DR_SESSION_DIR="/app/data/sessions"
DR_LOGS_DIR="/app/data/logs"
DR_ENCRYPTION_KEY="/app/data/encryption.key"
DR_RETENTION_DAYS="30"
DR_LOCAL_RETENTION_DAYS="7"
DR_DEBUG_MODE="true"
DR_BACKUP_DESTINATIONS="gdrive"
DR_ENCRYPTION_CIPHER="aes-256-cbc"
DR_VERIFY_BACKUPS="true"
DR_KEEP_TEMP_FILES="false"
DR_CPU_NICE_LEVEL="19"
DR_IO_NICE_LEVEL="7"
DR_AUTO_START_SERVICES="true"
DR_POST_RECOVERY_HEALTH_CHECK="true"

# PostgreSQL Settings
POSTGRES_HOST="postgres"
POSTGRES_PORT="5432"
POSTGRES_USER="odoo_master"
POSTGRES_PASSWORD="secure_password_123"
POSTGRES_MASTER_DB="postgres"

# Project paths (for Docker)
PROJECT_ROOT="/app/project"
ODOO_FILESTORE_PATH="/opt/odoo/filestore"
DOCKER_COMPOSE_FILE="/app/project/docker-compose.yml"
NGINX_CONFIG_PATH="/app/nginx"
SSL_CERTS_PATH="/app/ssl"

# Cloud settings
DR_CLOUD_BUCKET=""
GDRIVE_FOLDER_NAME=""
DR_NOTIFICATION_EMAIL=""
DR_WEBHOOK_URL=""