<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Default SaaS Controller Configuration -->
    <record id="default_saas_config" model="saas.controller">
        <field name="database_name">default_tenant</field>
        <field name="max_users">10</field>
        <field name="user_limit_enabled">True</field>
        <field name="remove_odoo_branding">False</field>
        <field name="custom_app_name">Business Manager</field>
        <field name="primary_color">#017e84</field>
        <field name="secondary_color">#875a7b</field>
        <field name="accent_color">#017e84</field>
        <field name="background_color">#ffffff</field>
        <field name="text_color">#212529</field>
        <field name="link_color">#017e84</field>
        <field name="is_active">True</field>
    </record>

    <!-- Scheduled Action for Syncing -->
    <record id="cron_sync_saas_configurations" model="ir.cron">
        <field name="name">Sync SaaS Configurations</field>
        <field name="model_id" ref="model_saas_controller"/>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="code">model.cron_sync_configurations()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
</odoo>
