<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- SaaS Controller Form View - Minimal -->
        <record id="view_saas_controller_form_minimal" model="ir.ui.view">
            <field name="name">saas.controller.form.minimal</field>
            <field name="model">saas.controller</field>
            <field name="arch" type="xml">
                <form string="SaaS Configuration - Minimal">
                    <header>
                        <button name="sync_with_saas_manager" type="object" string="Sync with SaaS Manager" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="database_name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="basic" string="Basic Configuration">
                                <field name="is_active"/>
                                <field name="saas_manager_url"/>
                                <field name="last_sync" readonly="1"/>
                            </group>
                            
                            <group name="users" string="User Management">
                                <field name="user_limit_enabled"/>
                                <field name="max_users" invisible="user_limit_enabled == False"/>
                                <field name="current_users" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group name="branding" string="Minimal Branding">
                                <field name="remove_odoo_branding"/>
                                <field name="replace_apps_icon"/>
                                <field name="custom_company_name"/>
                                <field name="primary_color"/>
                            </group>
                        </group>
                        
                        <div class="alert alert-info" role="alert">
                            <strong>Minimal Approach:</strong> This module uses a non-invasive approach that preserves Odoo's core design while providing essential SaaS functionality.
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- SaaS Controller Tree View -->
        <record id="view_saas_controller_tree_minimal" model="ir.ui.view">
            <field name="name">saas.controller.tree.minimal</field>
            <field name="model">saas.controller</field>
            <field name="arch" type="xml">
                <tree string="SaaS Configurations">
                    <field name="database_name"/>
                    <field name="is_active"/>
                    <field name="current_users"/>
                    <field name="max_users"/>
                    <field name="remove_odoo_branding"/>
                    <field name="last_sync"/>
                </tree>
            </field>
        </record>
        
        <!-- SaaS Controller Action -->
        <record id="action_saas_controller_minimal" model="ir.actions.act_window">
            <field name="name">SaaS Configuration</field>
            <field name="res_model">saas.controller</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_saas_controller_tree_minimal"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first SaaS configuration!
                </p>
                <p>
                    Configure tenant limits, branding, and other SaaS settings with minimal impact on Odoo's design.
                </p>
            </field>
        </record>
        
        <!-- Menu Items -->
        <menuitem id="menu_saas_controller_root" 
                  name="SaaS Controller" 
                  sequence="100"
                  groups="base.group_system"/>
        
        <menuitem id="menu_saas_controller_config" 
                  name="Configuration" 
                  parent="menu_saas_controller_root" 
                  action="action_saas_controller_minimal" 
                  sequence="10"/>
        
    </data>
</odoo>
