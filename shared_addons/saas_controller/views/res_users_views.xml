<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Users Form View to Show Limit Info -->
    <record id="view_users_form_inherit" model="ir.ui.view">
        <field name="name">Users Form - SaaS Controller</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <div class="alert alert-info d-flex align-items-center" role="alert" invisible="share == True">
                    <i class="fa fa-info-circle mr-2"/>
                    <div>
                        <strong>User Limits:</strong>
                        <span class="ml-2">
                            Current: <t t-esc="context.get('current_users', 0)"/> / 
                            Max: <t t-esc="context.get('max_users', 10)"/> users
                        </span>
                        <span class="ml-3 text-muted">
                            (<t t-esc="context.get('remaining_users', 0)"/> slots available)
                        </span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Extend Users Tree View -->
    <record id="view_users_tree_inherit" model="ir.ui.view">
        <field name="name">Users Tree - SaaS Controller</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-info">share == False</attribute>
                <attribute name="decoration-muted">share == True</attribute>
            </xpath>
            <xpath expr="//field[@name='login_date']" position="after">
                <field name="share"/>
            </xpath>
        </field>
    </record>
</odoo>
