<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Create a separate settings view -->
    <record id="hide_setting_config_settings_view_form" model="ir.ui.view">
        <field name="name">hide.setting.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="Hide Settings Configuration" class="oe_form_configuration">
                <header>
                    <button string="Save" type="object" name="execute" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="app_settings_block" data-string="UI Security" string="UI Security">
                        <h2>User Interface Security</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="hide_settings_ui"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="hide_settings_ui"/>
                                    <div class="text-muted">
                                        Hide the Settings menu from UI. Settings will only be accessible via API calls.
                                        <br/>
                                        <strong>Warning:</strong> This will make settings invisible to all users in the interface.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Hide Settings Configuration -->
    <record id="action_hide_setting_config_settings" model="ir.actions.act_window">
        <field name="name">Hide Settings Configuration</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hide_setting_config_settings_view_form"/>
        <field name="target">inline</field>
        <field name="context">{'module': 'hide_setting'}</field>
    </record>

    <!-- Menu Item for Hide Settings Configuration -->
    <menuitem id="menu_hide_setting_config_settings"
              name="UI Security Settings"
              parent="base.menu_administration"
              action="action_hide_setting_config_settings"
              groups="base.group_system"
              sequence="99"/>
</odoo>