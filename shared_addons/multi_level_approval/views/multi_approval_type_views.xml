<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="multi_approval_type_view_tree" model="ir.ui.view">
        <field name="name">multi_approval_type_view_tree</field>
        <field name="model">multi.approval.type</field>
        <field name="arch" type="xml">
            <tree string="Approval Types" import="false">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="multi_approval_type_view_form" model="ir.ui.view">
        <field name="name">multi_approval_type_view_form</field>
        <field name="model">multi.approval.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="toggle_active" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&apos;terminology&apos;:&apos;archive&apos;}" invisible="1"/>
                            <span name="active" class="o_stat_text text-success" invisible="active == False">Active</span>
                            <span name="active" class="o_stat_text text-danger" invisible="active == True">Deactive</span>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image&quot;, &quot;size&quot;: [80, 80]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Approvals Type"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Options" name="options">
                            <group string="Fields" name="option_settings">
                                <group>
                                    <field name="document_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                    <field name="contact_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                    <field name="date_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                    <field name="period_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                    <field name="item_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                </group>
                                <group>
                                    <field name="quantity_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                    <field name="amount_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                    <field name="payment_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                    <field name="reference_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                    <field name="location_opt" widget="radio" options="{&apos;horizontal&apos;: true}"/>
                                </group>
                            </group>
                            <group string="Approvers" name="approvers">
                                <group>
                                    <field name="approval_minimum"/>
                                </group>
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="user_id"/>
                                        <field name="require_opt"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="multi_approval_type_view_filter" model="ir.ui.view">
        <field name="name">multi_approval_type_view_filter</field>
        <field name="model">multi.approval.type</field>
        <field name="arch" type="xml">
            <search string="Approvals">
                <separator/>
                <filter string="To Reviews" name="to_review" domain="[(&apos;submitted_nb&apos;,&apos;&gt;&apos;, 0)]"/>
                <separator/>
                <filter string="My Approvals" name="my_approval" domain="[(&apos;my_request_nb&apos;,&apos;&gt;&apos;, 0)]"/>
                <separator/>
            </search>
        </field>
    </record>
    <record id="multi_approval_type_view_kanban" model="ir.ui.view">
        <field name="name">multi_approval_type_view_kanban</field>
        <field name="model">multi.approval.type</field>
        <field name="arch" type="xml">
            <kanban class="o_modules_kanban" import="false">
                <field name="name"/>
                <field name="id"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_module_vignette" style="background-color: beige; display:flex;">
                            <button type="object" class="btn" name="create_request" context="{&apos;type_id&apos;:&apos;active_id&apos;}">
                                <img src="/multi_level_approval/static/src/img/add-record.png" alt="Approval Type Image" class="oe_kanban_avatar float-left mr-3" width="64" height="132" syle="border-radius: 15px;"/>
                            </button>
                            <div class="oe_module_desc">
                                <h2>
                                    <field name="name"/>
                                </h2>
                                <div class="oe_module_action" t-if="!selection_mode">
                                    <button type="object" class="btn btn-primary btn-sm" name="open_submitted_request" context="{&apos;type_id&apos;:&apos;active_id&apos;}" style="width: 98%; margin: 5px 0px; border-radius: 5px;">
                                        <span style="float:left">Pending Request</span>
                                        <span style="float:right; background-color: white; border-radius: 12px; color: crimson; font-weight: bold; width: 35px;">
                                            <field name="submitted_nb"/>
                                        </span>
                                    </button>
                                    <button type="object" class="btn btn-primary btn-sm" name="open_my_request" context="{&apos;type_id&apos;:&apos;active_id&apos;}" style="width: 98%; margin: 5px 0px; border-radius: 5px">
                                        <span style="float:left">My Request</span>
                                        <span style="float:right; background-color: white; border-radius: 12px; color: crimson; font-weight: bold; width: 35px;">
                                            <field name="my_request_nb"/>
                                        </span>
                                    </button>
                                    <button type="object" class="btn btn-primary btn-sm" name="open_all_request" context="{&apos;type_id&apos;:&apos;active_id&apos;}" style="width: 98%; margin: 5px 0px; border-radius: 5px">
                                        <span style="float:left">All Request</span>
                                        <span style="float:right; background-color: white; border-radius: 12px; color: crimson; font-weight: bold; width: 35px;">
                                            <field name="all_request_nb"/>
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>