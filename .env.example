# Database Configuration
POSTGRES_DB=odoo_master
POSTGRES_USER=odoo
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Flask Application
FLASK_ENV=production
SECRET_KEY=your-very-long-and-secure-secret-key-here
PORT=5000

# Odoo Configuration
ODOO_ADMIN_PASSWORD=admin123
ODOO_DATABASE_NAME=odoo_master
ODOO_MASTER_URL=http://odoo_master:8069
ODOO_MASTER_DB=odoo_master
ODOO_MASTER_USERNAME=admin
